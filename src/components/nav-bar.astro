---
import { Image } from 'astro:assets';
import { NAVBAR_URL } from '@/constants';
import { cn } from '@/lib/utils';
import logo from '@/assets/logo.png';

const pathname = Astro.url.pathname;
---

<nav
  class="from-background sticky top-0 space-y-2 bg-gradient-to-b to-transparent px-6 py-4 backdrop-blur-md"
>
  <a href="/">
    <Image src={logo} alt="일상" class="h-8 w-12 rounded-full object-cover object-center" />
  </a>
  <!-- <div class="flex flex-col items-center sm:flex-row sm:justify-between"> -->
  <div class="flex justify-between">
    <div class="flex items-center gap-x-4 text-sm tracking-tighter sm:text-base">
      {
        NAVBAR_URL.map(({ label, href }) => (
          <span class="relative">
            <a
              href={href}
              class={cn([
                'text-muted-foreground hover:text-foreground cursor-pointer transition-colors duration-200',
                pathname === href && 'text-foreground font-bold',
              ])}
            >
              {label}
            </a>
            {pathname === href && (
              <span class="absolute -bottom-[0.6875rem] left-1/2 h-4 w-4 -translate-x-1/2 animate-ping rounded-full bg-red-200 [animation-fill-mode:forwards] [animation-iteration-count:1]" />
            )}
            {pathname === href && (
              <span class="absolute -bottom-1.5 left-1/2 h-1.5 w-1.5 -translate-x-1/2 rounded-full bg-red-500" />
            )}
          </span>
        ))
      }
    </div>
